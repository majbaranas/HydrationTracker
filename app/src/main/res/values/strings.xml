    <string name="tip_1_title">Start Your Day Right</string>
    <string name="tip_1_description">Drink a glass of water immediately after waking up to kickstart your metabolism and rehydrate your body after sleep.</string>

    <string name="tip_2_title">Before Every Meal</string>
    <string name="tip_2_description">Drink water 30 minutes before meals to aid digestion, help control portion sizes, and improve nutrient absorption.</string>

    <string name="tip_3_title">During Exercise</string>
    <string name="tip_3_description">Drink water every 15-20 minutes during exercise to maintain optimal hydration levels and enhance performance.</string>

    <string name="tip_4_title">Carry a Bottle</string>
    <string name="tip_4_description">Keep a reusable water bottle with you throughout the day as a visual reminder to drink more water regularly.</string>

    <string name="tip_5_title">Set Reminders</string>
    <string name="tip_5_description">Enable notifications in settings to receive regular reminders to drink water throughout the day and maintain consistent hydration.</string>

    <string name="tip_6_title">Monitor Urine Color</string>
    <string name="tip_6_description">Check your urine color - pale yellow indicates good hydration, while darker colors mean you need to drink more water.</string>

